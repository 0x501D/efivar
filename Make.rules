%.a :
	$(AR) -cvqs $@ $^

% : %.o
	$(CC) $(CCLDFLAGS) -o $@ $^ $(foreach lib,$(LIBS),-l$(lib))

%.so.$(SONAME_VERSION) : 
	$(CC) $(CFLAGS) -Wl,-soname,$(SONAME) $(CCLDFLAGS) $^ -o $@

%.o: %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

%.S: %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -S $< -o $@

%.E: %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -E $< -o $@

%.c : %.h
